@model List<Product>
@if (Model != null && Model.Count() > 0)
{
    <div class="product-item-wrap row">
        @foreach (var item in Model)
        {
            string url = $"/{item.Alias}-{item.ProductID}.html";
            <div class="col-xl-3 col-lg-4 col-sm-6">
                <div class="product text-center">
                    <div class="position-relative mb-3">
                        <div class="badge text-white bg-"></div><a class="d-block" href="@url"><img class="img-fluid" style="height: 300px; width: 100%" src="~/images/products/@item.Thump" alt="@item.Title"></a>
                        <div class="product-overlay">
                            <ul class="mb-0 list-inline">
                                <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-outline-dark" href="#!"><i class="far fa-heart"></i></a></li>
                                <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-dark add-to-cart" productID="@item.ProductID" href="javascript:void(0)">Add to cart</a></li>
                                <li class="list-inline-item me-0"><a class="btn btn-sm btn-outline-dark" href="#productView" data-bs-toggle="modal"><i class="fas fa-expand"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <h6> <a class="product-name" href="@url">@item.ProductName</a></h6>
                    <p class="small text-muted"><span class="new-price">@item.Price.Value.ToString("#,##0") VNƒê</span></p>
                </div>
            </div>
        }

    </div>
}